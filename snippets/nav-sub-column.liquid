<ul class="container is-flex">
	{% for childlink in linklists[child_list_handle].links %}
		<li class="flex--size-medium">
			<a href="{{ childlink.url }}" class="h3 sub-nav__title">{{ childlink.title | escape }}</a>

			{%- assign subchild_list_handle = childlink.title | handleize -%}
			{% if linklists[subchild_list_handle].links != blank and link.type != 'collection_link' %}
				<ul>
					{% for subchildlink in linklists[subchild_list_handle].links %}
						<li {% if childlink.active %}class="sub-nav--active"{% endif %}>
							<a href="{{ subchildlink.url }}" class="sub-nav__link">{{ subchildlink.title | escape }}</a>
						</li>
					{% endfor %}
				</ul>
			{% endif %}
		</li>
	{% endfor %}
</ul>
